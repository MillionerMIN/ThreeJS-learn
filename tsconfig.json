{
  "compilerOptions": {
    "module": "es6",
    "target": "es5",
    "allowJs": true,
    "outDir": "./dist/",
    "noImplicitAny": true,
    "removeComments": true,
    "sourceMap": true,
    "moduleResolution": "node",
    "strictNullChecks": true,
    "allowSyntheticDefaultImports": true,
    "jsx": "preserve"
  },
  "include": ["src", "src/custom.d.ts"],
  "exclude": ["node_modules/**/*"]
}
